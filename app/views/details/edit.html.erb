<header>
<div class='fixed-top bottom-shadow'>
  <div class="header">
    <table class="table">
      <tr>
        <td class="p-0"><h2 class="white pt-15 text-left pl-50">明細編集</h2></td>
      </tr>
    </table>
  </div>
  <input type="checkbox" class="openSidebarMenu" id="openSidebarMenu">
  <label for="openSidebarMenu" class="sidebarIconToggle">
    <div class="spinner diagonal part-1"></div>
    <div class="spinner horizontal"></div>
    <div class="spinner diagonal part-2"></div>
  </label>
  <div id="sidebarMenu">
    <ul class="sidebarMenuInner">
      <li class="text-left"><i class="fas fa-home fa-lg"></i><%= link_to ' ホーム', profile_path %></li>
      <li class="text-left"><i class="fas fa-donate fa-lg"></i><%= link_to ' 家計簿一覧', months_path %></li>
      <% if @authenticated_this_month.present? %>
        <li class="text-left"><i class="fas fa-list fa-lg"></i><%= link_to ' 明細', month_details_path(@authenticated_this_month.id) %></li>
        <li class="text-left"><i class="fas fa-exchange-alt fa-lg"></i><%= link_to ' 精算', reimbursement_month_details_path(@authenticated_this_month.id) %></li>
        <li class="text-left"><i class="fas fa-chart-pie fa-lg"></i><%= link_to ' 分析', month_budgets_path(@authenticated_this_month.id) %></li>
        <li class="text-left"><i class="fas fa-donate fa-lg"></i><%= link_to ' 入金', month_deposits_path(@authenticated_this_month.id) %></li>
      <% end %>
      <% if current_user.name == "ゲストユーザー" %>
        <li class="text-left"><i class="fas fa-user fa-lg"></i><%= link_to " #{current_user.name}", profile_path %></li>
      <% else %>
        <li class="text-left"><i class="fas fa-user fa-lg"></i><%= link_to " #{current_user.name}", edit_profile_path %></li>
      <% end %>
      <li class="text-left"><i class="fas fa-file-alt fa-lg"></i><%= link_to " 利用規約", terms_of_service_path %></li>
      <li class="text-left"><i class="fas fa-file-alt fa-lg"></i><%= link_to " プライバシーポリシー", privacy_policy_path %></li>
      <li class="text-left"><i class="fas fa-sign-out-alt fa-lg"></i><%= link_to ' ログアウト', logout_path, method: :delete, data:{confirm:"ログアウトしますか？"} %></li>
    </ul>
  </div>
</div>
</header>
<body class="bgc-white pb-80">
<div class="container mt-70">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <% if current_user.name == "ゲストユーザー" %>
        <div class="invite-resister">
          <p class="mb-5">閲覧中のデータはサンプルです</p>
          <%= link_to "ユーザー登録へ", invite_resiter_path, method: :delete %>
        </div>
      <% end %>
      <%= form_with model: @detail, local: true do |f| %>
          <div class="form-group">
            <div class="w-200 text-left">
            <%= f.label :日付 %>
            <%= f.date_field :date, class: 'form-control form-control-lg' %>
            </div>
          </div>
          <div class="form-group">
            <div class="w-200 text-left">
              <%= f.label :分類 %>
              <%= f.select :classification,[["家賃", :rent], ["食費", :food], ["生活費", :life], ["交際費", :enjoy], ["入金", :money], ["その他", :other]],{ include_blank: ''}, class: 'form-control form-control-lg select' %>
            </div>
          </div>
          <div class="form-group">
            <div class="w-200 text-left">
            <%= f.label :メモ %>
            <%= f.text_field :note, class: 'form-control form-control-lg' %>
            </div>
          </div>
          <div class="row">
          <div class="form-group col">
            <div class="w-200 text-left">
            <%= f.label :収入 %>
            <%= f.number_field :income, class: 'form-control form-control-lg' %>
            </div>
          </div>
          <div class="form-group col">
            <div class="w-200 text-left">
            <%= f.label :支出 %>
            <%= f.number_field :spending, class: 'form-control form-control-lg' %>
            </div>
          </div>
          </div>
          <div class="form-group">
            <div class="w-200 text-left">
            <%= f.label :どの財布で支払った？ %>
            <%= f.select :replayer,[["旦那さん", "旦那"], ["奥さん", "嫁"], ["共通財布", "共通"]],{ include_blank: ''}, class: 'form-control form-control-lg select' %>
            </div>
          </div><br>
          
          <%= f.submit '修正する', class: 'btn btn-warning btn-lg' %><br><br>
          <%= link_to "キャンセル" ,month_details_path(@detail.month_id), class: 'btn btn-outline-warning btn-lg' %>
      <% end %>
      <br><%= link_to "明細を消去", detail_path(@detail), method: :delete, data:{confirm:"本当に消去していいですか？"}, class: 'btn btn-outline-danger btn-lg' %>
    </div>
  </div>
</div>
</body>
<footer class="switch_footer">
  <div class="switch top-shadow">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col prl-5">
          <%= link_to month_details_path(@detail.month_id) do %>
            <i class="fas fa-list fa-lg orange"></i><br><div class="negative-margin"><span class="font-size orange">明細</span></div>
          <% end %>
        </div>
        <div class="col prl-5 orange">
          <%= link_to reimbursement_month_details_path(@detail.month_id) do %>
            <i class="fas fa-exchange-alt fa-lg"></i><br><div class="negative-margin"><span class="font-size">精算</span></div>
          <% end %>
        </div>
        <div class="col prl-5">
          <%= link_to month_budgets_path(@detail.month_id) do %>
            <i class="fas fa-chart-pie fa-lg"></i><br><div class="negative-margin"><span class="font-size">分析</span></div>
          <% end %>
        </div>
        <div class="col prl-5">
          <%= link_to month_deposits_path(@detail.month_id) do %>
            <i class="fas fa-donate fa-lg"></i><br><div class="negative-margin"><span class="font-size">入金</span></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</footer>