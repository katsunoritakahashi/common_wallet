<div class="container mt-70">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h2 class="text-left">ログイン</h2>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group text-left">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email, class: 'form-control form-control-lg' %>
        </div>
        <div class="form-group text-left">
          <%= f.label :パスワード %>
          <%= f.password_field :password, class: 'form-control form-control-lg' %>
        </div><br><br>
        <div class="actions">
          <%= f.submit 'ログイン', class: 'btn btn-warning' %>
        </div>
      <% end %>
      <div class='text-center'>
      <br>
        <%= link_to '新規登録はこちら', new_user_path %>
      </div>
    </div>
  </div>
</div>