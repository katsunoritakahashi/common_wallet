<div class="container mt-70">
  <div class="row">
    <div class="col-sm-12">
      <h2 class="text-left">
        入金調整
      </h2>
      <%= form_with model: @detail, local: true do |f| %>
          <div class="form-group">
            <div class="w-200 text-left">
            <%= f.label :調整理由 %>
            <%= f.text_field :name, class: 'form-control form-control-lg' %>
            </div>
          </div>
          <br>
          <div class="form-group">
            <div class="w-200 text-left">
              <%= f.label :対象者 %>
              <%= f.select :player,[["旦那さん", "旦那"], ["奥さん", "嫁"]],{ include_blank: '　'}, class: 'form-control form-control-lg' %>
            </div>
          </div><br>
          <div class="form-group">
            <div class="w-200 text-left">
              <%= f.label :金額 %>
              <%= f.number_field :amount, class: 'form-control form-control-lg', placeholder: '' %>
            </div>
          </div><br>
          <div class="form-group">
            <div class="w-200 text-left">
              <%= f.label :調整率 %>
              <%= f.number_field :rate, class: 'form-control form-control-lg', placeholder: '' %>
            <p>※補正率は未入力の場合は「100(%)」となります。</p>
            </div>
          </div><br>
          
          <%= f.submit '追加', class: 'btn btn-warning btn-lg' %><br><br>
          <%= link_to "キャンセル" ,month_deposits_path(params[:month_id]), class: 'btn btn-outline-warning btn-lg' %>
      <% end %>
      
    </div>
  </div>
</div>
