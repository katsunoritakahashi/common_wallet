<div class="col-sm-12 col-lg-4 mb-3">
  <div id="month-id-<%= month.id %>">
  <li>
    <%= link_to month.month.strftime("%Y年%m月の家計簿"), "#", class: 'btn btn btn-info btn-sm' %>
    <%= link_to month_path(month), method: :delete, data:{confirm:"本当に削除していいですか？"} do %>
      <%= icon 'fas', 'trash' %>
    <% end %>
  </li>
  </div>
</div>