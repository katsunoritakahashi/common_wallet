<header>
<div class='fixed-top bottom-shadow'>
  <nav class="navbar navbar-expand-lg navbar-light bg-warning">
    <%= link_to profile_path, class: 'navbar-brand' do %>
      <%= image_tag 'top-header.png', width: '130', height: '30'%>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to '口座残高', months_path, class: "nav-link" %>
        </li>
      <% if @authenticated_this_month.present? %>
        <li class='nav-item dropdown dropdown-slide'>
          <a href='#' class='nav-link' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false' id='header-profile'>
            <%= "今月の家計簿" %>
          </a>
          <div class='dropdown-menu dropdown-menu-right'>
            <div class='dropdown-item gray'><%= @authenticated_this_month.month.strftime("%Y年%-m月の家計簿") %></div>
            <div class="dropdown-divider"></div>
            <%= link_to month_details_path(@authenticated_this_month.id), class: 'dropdown-item gray' do %>
              <span>明細</span>
            <% end %>
            <%= link_to reimbursement_month_details_path(@authenticated_this_month.id), class: 'dropdown-item gray' do %>
              <span>精算</span>
            <% end %>
            <%= link_to month_budgets_path(@authenticated_this_month.id), class: 'dropdown-item gray' do %>
              <span>分析</span>
            <% end %>
            <%= link_to month_deposits_path(@authenticated_this_month.id), class: 'dropdown-item gray' do %>
              <span>入金</span>
            <% end %>
          </div>
        </li>
      <% end %>
      </ul>
      <ul class="navbar-nav">
        <li class='nav-item dropdown dropdown-slide'>
          <a href='#' class='nav-link' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false' id='header-profile'>
            <%= "アカウント" %>
          </a>
          <div class='dropdown-menu dropdown-menu-right'>
          <% if current_user.name == "ゲストユーザー" %>
            <%= link_to "#{current_user.name}", profile_path, class: 'dropdown-item gray' %>
          <% else %>
            <%= link_to "#{current_user.name}", edit_profile_path, class: 'dropdown-item gray' %>
          <% end %>
            <div class="dropdown-divider"></div>

            <%= link_to 'ログアウト', logout_path, class: 'dropdown-item gray', method: :delete %>
          </div>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li class='nav-item dropdown dropdown-slide'>
          <a href='#' class='nav-link' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false' id='header-profile'>
            <%= "規約" %>
          </a>
          <div class='dropdown-menu dropdown-menu-right'>
            <%= link_to "利用規約", terms_of_service_path, class: 'dropdown-item gray' %>
            <%= link_to "プライバシーポリシー", privacy_policy_path, class: 'dropdown-item gray' %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</div>
</header>